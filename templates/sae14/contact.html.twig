<!-- form contact START -->

<div id="contact">

    <h4 style="text-align:center;font-weight:900;position:relative;margin-top:10%;">Contact</h4>

    <form style="width:20rem;display:block;margin: 0 auto;">
      <fieldset>
        <div class="form-group">
          <label class="col-form-label mt-4" for="inputDefault">Nom</label>
          <input id="contactinput1" type="text" class="form-control" placeholder="Votre Nom" id="inputDefault">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1" class="form-label mt-4">Email adresse</label>
          <input id="contactinput2" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label class="col-form-label mt-4" for="inputDefault">Sujet</label>
          <input id="contactinput3" type="text" class="form-control" placeholder="Sujet" id="inputDefault">
        </div>
        <div class="form-group">
          <label for="exampleTextarea" class="form-label mt-4">Description</label>
          <textarea id="contactinput4" class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>
        <center><button type="button" class="btn btn-primary" onclick="contactbtnclick();">Submit</button></center>
      </fieldset>
    </form>
</div>

<!-- form contact FINISH -->

<p>&nbsp;</p>

<center><div id="contactdone" style="visibility:hidden;width:50%;">
    
    <div id="contactdonemsj" class="alert alert-dismissible alert-primary">
      <strong>I got your message. Thanks.</strong>
    </div>
    
</div></center>


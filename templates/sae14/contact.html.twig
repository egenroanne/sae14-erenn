{% extends 'base.html.twig' %}

{% block title %}Contact - Eren Turkoglu{% endblock %}

{% block body %}

<script>
    function contactbtnclick(){
        
        document.getElementById("contactdone").style.visibility = "visible";
    
        if(document.getElementById("contactinput1").value.length != 0 && document.getElementById("contactinput2").value.length != 0 && document.getElementById("contactinput3").value.length != 0 && document.getElementById("contactinput4").value.length != 0){
            document.getElementById("contactdonemsj").classList.remove('alert-danger')
            document.getElementById("contactdonemsj").classList.add('alert-primary')
            document.getElementById("contactdonemsj").innerHTML = "<strong>I got your message. Thanks.</strong>";
        }else{
            document.getElementById("contactdonemsj").classList.remove('alert-primary')
            document.getElementById("contactdonemsj").classList.add('alert-danger')
            document.getElementById("contactdonemsj").innerHTML = "<strong>Please fill the required fields.</strong>";
        }

    }
</script>

